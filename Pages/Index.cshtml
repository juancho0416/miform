@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1>Login</h1>
        <hr class="red">
        </hr>
        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" type="text" placeholder="Ingrese su correo" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" type="password"
                    placeholder="Ingrese su contraseña" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary pull-right">Entrar</button>
        </form>
        @if (!ModelState.IsValid)
        {
            <div class="mt-3 alert @(ModelState.IsValid ? "alert-success" : "alert-danger")">
                @if (ModelState.IsValid)
                {
                    <div> Login/registro válido</div>
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="mt-2">@TempData["Mensaje"]</div>
                    }
                }
                else
                {
                    <div>Datos invalidos,corrijalos porfavor</div>
                }
            </div>

        }
        <div>
            <a asp-page="/Index" class="btn btn-danger">Reintentar</a>

        </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
    </div>